<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ezen.spring.project.shop.ItemOrderMapper">
		<insert id="addOrder" parameterType="com.ezen.spring.project.shop.ItemOrderVO"
			useGeneratedKeys="true" keyProperty="orderNum">
			INSERT INTO itemorder VALUES(NULL, #{goods},#{user},#{price},#{qty},NOW())
		</insert>
		
		<select id="getList" resultType="com.ezen.spring.project.shop.ItemOrderVO">
			SELECT * FROM itemorder WHERE user=#{uid}
		</select>
		
		<select id="getOrder" resultType="com.ezen.spring.project.shop.ItemOrderVO">
			SELECT * FROM itemorder
		</select>
		
		<select id="getGoods" resultType="com.ezen.spring.project.shop.ItemOrderVO">
			SELECT * FROM itemorder WHERE goods=#{goods} LIMIT 1
		</select>
		
		
</mapper>